.container {
  max-width: 1200px !important
}

h3 {
  margin-bottom: 10px
}

.demo-block > div {
  > table {
    display: block;
    border-collapse: collapse;
    margin: 1rem 0;
    overflow-x: auto;

    tr {
      border-top: 1px solid var(--border-color);
    }

    tr:nth-child(2n) {
      background-color: var(--bg-color-mute);
    }

    tr:nth-child(2n) {
      /* background-color: #f6f8fa; */
      background: unset;
    }

    th,
    td {
      border: 1px solid var(--border-color);
      padding: 0.6em 1em;
    }
  }
}

tr:nth-child(2n) {
  background-color: unset;
}

th, td {
  padding: unset;
  border: unset;
}

table {
  display: table;
  border-collapse: unset;
  margin: unset;
  overflow-x: unset;
}

.content {
  > div > table {
    display: block;
    border-collapse collapse;

    tr:nth-child(2n) {
      background-color: #f6f8fa;
    }

    th, td {
      border: 1px solid #dfe2e5;
      padding: 0.6em 1em;
    }
  }
}
